{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6" : true,
    "mocha": true
  },
  "rules": {
    "no-param-reassign" : 0,
    "no-underscore-dangle": [1, { "allow": ["_id"] }],
    "no-unused-vars": [1, { "argsIgnorePattern": "next", "varsIgnorePattern" : "should|mongoose" }]
  }
}
